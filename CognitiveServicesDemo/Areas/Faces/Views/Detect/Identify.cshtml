@model IdentifyFacesModel
@{
    ViewBag.Title = "Identify";
    var groups = (PersonGroup[])ViewBag.PersonGroups;
}

<div class="row">
    @Html.Partial("_FacesMenu");
    <div class="col-md-8">
        <h2>Identify</h2>

        @if(Model.Error != null)
        {
            <strong>@Model.Error</strong>
        }

        <form method="post" enctype="multipart/form-data">
            Upload photo to analyze: <br />
            <input type="file" name="ImageToAnalyze" /><br />
            @Html.DropDownList("personGroupId", Model.PersonGroups)
            <br />
            <button type="submit">Send</button>
        </form>

        @if (Model.ImageDump != null)
        {
            <br /><img src="@Model.ImageDump" width="600" style="border: 1px solid darkgray" />

            <h3>Faces</h3>

            <table class="table-bordered">
                <thead>
                    <tr>
                        <th></th>
                        <th>Person</th>
                        <th>Anger</th>
                        <th>Contempt</th>
                        <th>Disgust</th>
                        <th>Fear</th>
                        <th>Happiness</th>
                        <th>Neutral</th>
                        <th>Sadness</th>
                        <th>Surprise</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var face in Model.IdentifiedFaces)
                    {
                        <tr>
                            <td><div style="display:inline-block; width:10px; height:10px; background-color: @face.GetHtmlColor()"></div></td>
                            <td style="text-align:right">@string.Join(", ", face.PersonCandidates.Select(p => p.Value).ToArray())</td>
                            <td style="text-align:right">@face.Emotions.Anger.ToString("0")%</td>
                            <td style="text-align:right">@face.Emotions.Contempt.ToString("0")%</td>
                            <td style="text-align:right">@face.Emotions.Disgust.ToString("0")%</td>
                            <td style="text-align:right">@face.Emotions.Fear.ToString("0")%</td>
                            <td style="text-align:right">@face.Emotions.Happiness.ToString("0")%</td>
                            <td style="text-align:right">@face.Emotions.Neutral.ToString("0")%</td>
                            <td style="text-align:right">@face.Emotions.Sadness.ToString("0")%</td>
                            <td style="text-align:right">@face.Emotions.Surprise.ToString("0")%</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>